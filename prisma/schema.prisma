generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  files     File[]
  createdAt DateTime @default(now())
}

model File {
  id        String   @id @default(cuid())
  filename  String
  mimetype  String
  path      String
  size      Int
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
  createdAt DateTime @default(now())
}




